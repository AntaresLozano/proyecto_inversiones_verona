<%- include('partials/_header.ejs') %>


    <div class="container-fluid mb-2">
        <div class="row">
            <div class="col-3 p-3">
                <div class="card text-center shadow" style="height:150px; width:150px"><br>
                    <div class="card-body">
                        <p class="card-text">Total Proveedores</p>
                        <h3 class="card-title"><%= proveedores.length %></h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container text-center mt-5">
        <h1>Listado de Proveedores</h1>
    </div>

    <div class="container mt-5">
        <div class="row mt-5">
            <div class="col-md-9">
                <div class="container mt-5">
                    <table id="example" class="table table-responsive table-striped table-active shadow p-3 mb-5 bg-white rounded">
                        <thead class="thead">
                            <tr>
                                <th>Nit</th>
                                <th>Nombre</th>
                                <th>Cod. Productos</th>
                                <th>Teléfono</th>
                                <th>Email</th>
                                <th>Días Descuento</th>
                                <th>Cuentas X Pagar</th>
                                <th>Editar</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let i=0; i < proveedores.length; i++) { %>
                                <tr class="text-center">
                                    <th>
                                        <%= proveedores[i].nit_proveedor %>
                                    </th>
                                    <th>
                                        <%= proveedores[i].nombre %>
                                    </th>
                                    <th>
                                        <%= proveedores[i].codigo %>
                                    </th>
                                    <th>
                                        <%= proveedores[i].telefono %>
                                    </th>
                                    <th>
                                        <%= proveedores[i].email %>
                                    </th>
                                    <th>
                                        <%= proveedores[i].dias_descuento %>
                                    </th>
                                    <th>
                                        <a class="nav-link text-center" href="cuentas">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-receipt-cutoff" viewBox="0 0 16 16">
                                                <path d="M3 4.5a.5.5 0 0 1 .5-.5h6a.5.5 0 1 1 0 1h-6a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 1 1 0 1h-6a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 1 1 0 1h-6a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5zM11.5 4a.5.5 0 0 0 0 1h1a.5.5 0 0 0 0-1h-1zm0 2a.5.5 0 0 0 0 1h1a.5.5 0 0 0 0-1h-1zm0 2a.5.5 0 0 0 0 1h1a.5.5 0 0 0 0-1h-1zm0 2a.5.5 0 0 0 0 1h1a.5.5 0 0 0 0-1h-1zm0 2a.5.5 0 0 0 0 1h1a.5.5 0 0 0 0-1h-1z"/>
                                                <path d="M2.354.646a.5.5 0 0 0-.801.13l-.5 1A.5.5 0 0 0 1 2v13H.5a.5.5 0 0 0 0 1h15a.5.5 0 0 0 0-1H15V2a.5.5 0 0 0-.053-.224l-.5-1a.5.5 0 0 0-.8-.13L13 1.293l-.646-.647a.5.5 0 0 0-.708 0L11 1.293l-.646-.647a.5.5 0 0 0-.708 0L9 1.293 8.354.646a.5.5 0 0 0-.708 0L7 1.293 6.354.646a.5.5 0 0 0-.708 0L5 1.293 4.354.646a.5.5 0 0 0-.708 0L3 1.293 2.354.646zm-.217 1.198.51.51a.5.5 0 0 0 .707 0L4 1.707l.646.647a.5.5 0 0 0 .708 0L6 1.707l.646.647a.5.5 0 0 0 .708 0L8 1.707l.646.647a.5.5 0 0 0 .708 0L10 1.707l.646.647a.5.5 0 0 0 .708 0L12 1.707l.646.647a.5.5 0 0 0 .708 0l.509-.51.137.274V15H2V2.118l.137-.274z"/>
                                            </svg>                                            

                                        </a>
                                    </th>
                                    <th>
                                        <button type="button" class="btn text-center" data-bs-toggle="modal"
                                            data-bs-target="#exampleModal<%= proveedores[i].nit_proveedor %>"
                                            data-bs-whatever="@fat">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="blue"
                                                class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                <path
                                                    d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                <path fill-rule="evenodd"
                                                    d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                            </svg>
                                        </button>
                                    </th>
                                    <th>
                                        <a  href="/deleteProveedor/<%= proveedores[i].nit_proveedor %> ">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="red"
                                                class="bi bi-trash text-center" viewBox="0 0 16 16">
                                                <path
                                                    d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                                <path fill-rule="evenodd"
                                                    d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                            </svg>
                                        </a>
                                    </th>
                                </tr>
                                <div class="modal fade" id="exampleModal<%= proveedores[i].nit_proveedor %>"
                                    tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Modificar Proveedor</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <form method="post" action="/editProveedor/<%=proveedores[i].nit_proveedor%>">
                                                    <div class="mb-3">
                                                        <label for="recipient-name" class="col-form-label">Nit
                                                            Proveedor</label>
                                                        <input type="text" class="form-control" id="recipient-name"
                                                            name="nit_proveedor" value="<%= proveedores[i].nit_proveedor %>">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="message-text" class="col-form-label">Nombre
                                                            Proveedor</label>
                                                        <input class="form-control" id="message-text" type="text"
                                                            name="nombre" value="<%= proveedores[i].nombre %>">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="message-text" class="col-form-label">codigo</label>
                                                        <input class="form-control" id="message-text" type="text"
                                                            name="codigo" value="<%= proveedores[i].codigo %>">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="message-text"
                                                            class="col-form-label">Telefóno</label>
                                                        <input class="form-control" id="message-text" type="text"
                                                            name="telefono" value="<%= proveedores[i].telefono %>">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="message-text" class="col-form-label">Email</label>
                                                        <input class="form-control" id="message-text" type="text"
                                                            name="email" value="<%= proveedores[i].email %>">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="message-text" class="col-form-label">Días Con
                                                            Descuento</label>
                                                        <input class="form-control" id="message-text" type="text"
                                                            name="dias_descuento"
                                                            value="<%= proveedores[i].dias_descuento %>">
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-bs-dismiss="modal">Cancelar</button>
                                                        <input type="submit" class="btn btn-primary">
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <% } %>
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="col-md-3">
                <div class="card mt-5">
                    <div class="card-body">
                        <form action="/addProveedor" method="post">
                            <div class="form-group mt-2">
                                <input type="number" name="nit_proveedor" placeholder="Nit o ID" class="form-control"
                                    required>
                            </div>
                            <div class="form-group mt-2">
                                <input type="text" name="nombre" placeholder="Nombre Proveedor" class="form-control"
                                    required>
                            </div>
                            <div class="form-group mt-2">
                                <input type="number" name="codigo" placeholder="Productos" class="form-control"
                                    required>
                            </div>
                            <div class="form-group mt-2">
                                <input type="number" name="telefono" placeholder="Teléfono" class="form-control"
                                    required>
                            </div>
                            <div class="form-group mt-2">
                                <input type="email" name="email" placeholder="Email" class="form-control" required>
                            </div>
                            <div class="form-group mt-2">
                                <input type="number" name="dias_descuento" placeholder="Días de descuento"
                                    class="form-control" required>
                            </div>
                            <div class="form-group mt-2 text-center">
                                <button type="submit" class="btn btn-dark btn-block">Agregar Proveedor</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (typeof alert !="undefined" ) {%>
        <script>
            Swal.fire('Eliminado Correctamente').then(() => {
                window.location = '/<%= ruta %>'
            })
        </script>
        <% } %>

            <%- include('partials/_footer.ejs') %>